{
  "name": "ReactBlog",
  "version": "0.1.0",
  "private": true,
  "hexo": {
    "version": "3.2.2"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-module-resolver": "^2.5.0",
    "babel-preset-react-app": "^2.1.0",
    "git-directory-deploy": "^1.5.1",
    "hexo": "^3.2.2",
    "hexo-generator-feed": "^1.2.0",
    "hexo-generator-json-content": "^3.0.1",
    "markdown-it": "^8.3.0",
    "nodemon": "^1.11.0",
    "prep": "^1.5.1",
    "prettier": "^0.18.0",
    "react-app-rewire-preact": "^0.1.2",
    "react-app-rewired": "^0.6.3",
    "react-scripts": "0.9.0",
    "standard": "^8.6.0",
    "sw-precache": "^5.0.0"
  },
  "dependencies": {
    "hexo-renderer-marked": "^0.2.11",
    "preact": "^7.2.0",
    "preact-compat": "^3.13.1",
    "react-router-dom": "next"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "fetch",
      "it"
    ]
  },
  "scripts": {
    "start": "npm run build-backend && react-app-rewired start",
    "build": "npm run build-backend && react-app-rewired build && prep ./build && sw-precache --root='build/' --static-file-globs='build/**/!(*map*)'",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "new": "hexo generate post",
    "deploy": "npm run build && git-directory-deploy --directory build --branch master",
    "watch": "nodemon -w ./backend -e .markdown,.md --exec 'npm run build-backend'",
    "lint": "standard",
    "format": "prettier --single-quote --write src/**/*.js && standard --fix",
    "build-backend": "hexo generate && node ./footnotes.js && mv ./dist/content.json ./src/posts.json && mv ./dist/atom.xml ./public && rm -rf ./dist"
  }
}
