{
  "name": "ReactBlog",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-preset-react-app": "^3.0.1",
    "change-case": "^3.0.1",
    "eslint-config-koality": "^1.0.0",
    "excerpt-html": "^1.2.0",
    "git-directory-deploy": "^1.5.1",
    "gray-matter": "^2.1.1",
    "highlightjs": "^9.10.0",
    "markdown-it": "^8.3.1",
    "markdown-it-footnote": "^3.0.1",
    "nodemon": "^1.11.0",
    "prep": "^1.6.0",
    "prettier": "^1.5.2",
    "prettier-eslint": "^6.4.1",
    "prettier-eslint-cli": "^4.1.1",
    "react-app-rewire-preact": "^1.0.1",
    "react-app-rewired": "^1.0.5",
    "react-scripts": "1.0.10",
    "rss": "^1.2.2",
    "serve": "^6.0.0",
    "workbox-cli": "^1.0.1"
  },
  "dependencies": {
    "preact": "^8.1.0",
    "preact-compat": "^3.16.0",
    "react-router-dom": "4.1.1",
    "rrc": "^0.10.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "koality",
    "globals": [
      "fetch",
      "it"
    ],
    "env": {
      "browser": true,
      "node": true
    }
  },
  "scripts": {
    "start": "npm run compile-posts && react-app-rewired start",
    "now-start": "serve ./build --single",
    "build": "npm run compile-posts && react-app-rewired build && prep ./build && workbox-cli generate:sw",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "deploy": "npm run build && git-directory-deploy --directory build --branch master",
    "watch": "nodemon -w posts -e markdown compileMarkdown.js",
    "lint": "eslint \"src/**/*.js\"",
    "format": "prettier-eslint --write \"src/**/*.js\"",
    "compile-posts": "node ./compileMarkdown.js"
  }
}
